extends ../layout

block content
  each value in user
    h3.text-right Update user
    form#UserAddForm(accept-charset='utf-8', method='post', name='useraddform', action='/update/#{value.id}')
      .form-group
        label(for='full_name') Full name
        |                         
        input#UserName.form-control(type='text', placeholder='Type your name', name='name', value= value.name)
      |                     
      .form-group
        label(for='email') Email Address
        |                         
        input#UserEmail.form-control(type='email', placeholder='Type your email address', name='email', value= value.email)
      |                     
      .form-group
        label(for='phone') Phone no.
        |                         
        input#UserPhone.form-control(type='number', placeholder='Type your phone no.', name='phone', value= value.phone)
      |                     
      .form-group
        button#addUserBtn.btn.btn-default(type='submit')
          i.glyphicon.glyphicon-edit
          | &#x3000;Submit
